<UserControl x:Class="MarshallApp.CodeEditorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit">
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель инструментов -->
        <StackPanel Orientation="Horizontal" Background="#252526" Grid.Row="0">
            <TextBlock x:Name="FileNameText"
               Text="new_script.py"
               Foreground="#DDD"
               FontWeight="Bold"
               VerticalAlignment="Center"
               Margin="5,0,15,0"/>
            <Button Content="New" Width="90" Margin="3" Click="NewButton_Click" Style="{StaticResource FlatButtonStyle}"/>
            <Button Content="Open" Width="90" Margin="3" Click="OpenButton_Click" Style="{StaticResource FlatButtonStyle}"/>
            <Button Content="Save" Width="90" Margin="3" Click="SaveButton_Click" Style="{StaticResource FlatButtonStyle}"/>
            <Button Content="Save As" Width="110" Margin="3" Click="SaveAsButton_Click" Style="{StaticResource FlatButtonStyle}"/>
        </StackPanel>

        <!-- Текстовый редактор -->
        <avalon:TextEditor Grid.Row="1"
                           x:Name="Editor"
                           FontFamily="Consolas"
                           FontSize="14"
                           SyntaxHighlighting="Python"
                           Background="#1E1E1E"
                           Foreground="#D4D4D4"
                           ShowLineNumbers="True"/>
    </Grid>
</UserControl>
